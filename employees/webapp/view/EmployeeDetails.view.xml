<mvc:View
    controllerName="logaligroup.employees.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout">

<Page id="_IDGenPage1" title="{i18n>employeeDetails}">

    <Panel id="_IDGenPanel1" >
        <FlexBox id="_IDGenFlexBox1" height="65px" alignItems="Center" justifyContent="Center">
            <items>
                <Text id="_IDGenText1" text="{odataNorthwind>TitleOfCourtesy} {odataNorthwind>LastName}, {odataNorthwind>FirstName}" class="boldText"/>
            </items>
        </FlexBox>
       
       <FlexBox id="_IDGenFlexBox2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
            <items>
                <VBox id="_IDGenVBox1" >
                    <Text id="_IDGenText2" text="{i18n>employeeID}" class="boldText sapUiTinyMarginEnd"/>
                     <Text id="_IDGenText3" text="{odataNorthwind>EmployeeID}" class="boldText sapUiTinyMarginEnd"/>
                </VBox>
                <VBox id="_IDGenVBox2" >
                    <Text id="_IDGenText4" text="{i18n>employeeTitle}" class="boldText sapUiTinyMarginEnd"/>
                     <Text id="_IDGenText5" text="{odataNorthwind>Title}" class="boldText sapUiTinyMarginEnd"/>
                </VBox>                               
            </items>
       </FlexBox>

       <FlexBox id="_IDGenFlexBox3" alignItems="Start" >
            <items>
                <HBox id="_IDGenHBox1" >
                    <Text id="_IDGenText6" text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd"/>
                     <Text id="_IDGenText7" text="{odataNorthwind>Country}" class="boldText sapUiTinyMarginEnd"/>
                     <layoutData>
                        <FlexItemData id="FID1" growFactor="3">
                        </FlexItemData>
                     </layoutData>
                </HBox>
                <HBox id="_IDGenHBox2" >
                    <Text id="_IDGenText8" text="{i18n>city}" class="boldText sapUiTinyMarginEnd"/>
                     <Text id="_IDGenText9" text="{odataNorthwind>City}" class="boldText sapUiTinyMarginEnd"/>
                     <layoutData>
                        <FlexItemData id="FID2" growFactor="3">
                        </FlexItemData>
                     </layoutData>                     
                </HBox>  
                  <FlexBox id="_IDGenFlexBoxsub1" alignItems="Start" >
                    <Text id="_IDGenText10" text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd"/>
                     <Text id="_IDGenText11" text="{odataNorthwind>PostalCode}" class="boldText sapUiTinyMarginEnd"/>
                     <layoutData>
                        <FlexItemData id="FID3" growFactor="3">
                        </FlexItemData>
                     </layoutData>                     
                </FlexBox>                                            
            </items>
       </FlexBox>

    </Panel>

    <Panel id="_IDGenPanel2" class="sapUiSizeCompact" backgroundDesign="Transparent">
        <headerToolbar>
            <Toolbar id="_IDGenToolbar1" >
                <Title id="_IDGenTitle1"  text="{i18n>incedence} {= ${odataNorthwind>Country} !== 'USA' ? ${i18n>europe} : ${i18n>us}}"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>
                <Button id="_IDGenButton1" text="{i18n>create}" press="onCreateIncidence"></Button>
            </Toolbar>
        </headerToolbar>
        <Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent"></Panel>
    </Panel>
    
</Page>

</mvc:View>    